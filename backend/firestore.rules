rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Entries collection
    match /entries/{entryId} {
      // Allow logged-in users to read their own entries
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // Create entry allowed if userId matches logged-in user
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Update/Delete only by owner
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Reports collection (optional)
    match /reports/{reportId} {
      // Logged-in users can create and read reports
      allow read, create: if request.auth != null;

      // Only the creator can update/delete their report
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
